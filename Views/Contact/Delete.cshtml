@model Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<h2 style="color: red">Do you really want to delete this contact?</h2>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Name):
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Name)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Phone):
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Phone)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Active):
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Active)
        </dt>
    </dl>
</div>

<form asp-action="Delete">
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
<br>
<a asp-action="Index">Back</a>